package parkingLotSystem;

import java.util.Date;

public class Truck extends Vehicle{

	public static double _hourlyRate = 50;

	public Truck(String licensePlate, double requestedParkingTime, Date timeParked) {
		this.licensePlate = licensePlate;
		this.requestedParkingTime = requestedParkingTime;
	}

	@Override
	public String toString() {
		return "License plate: " + licensePlate + "  Parking expiration: " + "  (Truck)";
	}

	public double calculateBill(){
		this.calculatedBill = _hourlyRate*this.requestedParkingTime;
		return calculatedBill;
	}



}
