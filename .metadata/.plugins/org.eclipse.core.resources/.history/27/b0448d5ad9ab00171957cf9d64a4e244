//Singleton design
package parkingLotSystem;

import java.util.HashSet;

public class ParkingLot {

	private static ParkingLot _parkingLot;
	private HashSet<Car> carParkingSpots = new HashSet<Car>();
	private HashSet<Truck> truckParkingSpots = new HashSet<Truck>();

	public ParkingLot() {}

	public static ParkingLot createParkingLot() {
		if(_parkingLot == null) {
			_parkingLot = new ParkingLot();
			System.out.println("A parkingLot is created");
		} else {
			System.out.println("A parkingLot already exists, no need for a new one.");
		}
		return _parkingLot;
	}

	public HashSet<Car> getCarParkingSpots() {
		return carParkingSpots;
	}

	public void setCarParkingSpots(HashSet<Car> carParkingSpots) {
		this.carParkingSpots = carParkingSpots;
	}

	public HashSet<Truck> getTruckParkingSpots() {
		return truckParkingSpots;
	}

	public void setTruckParkingSpots(HashSet<Truck> truckParkingSpots) {
		this.truckParkingSpots = truckParkingSpots;
	}




}
